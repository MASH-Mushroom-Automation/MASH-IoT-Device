# MASH IoT Device Environment Configuration
# Copy this file to .env and update with your values

# Device Configuration
DEVICE_ID=your_device_id_here
DEVICE_NAME=MASH Chamber #1
DEVICE_TYPE=MASH_CHAMBER
DEVICE_MODEL=RPi3-ModelB
SERIAL_NUMBER=your_serial_number
MAC_ADDRESS=your_mac_address

# Backend API Configuration
BACKEND_API_URL=https://mash-backend.onrender.com/api
BACKEND_API_KEY=your_api_key_here

# ============================================================================
# JWT - JSON Web Token Authentication
# ============================================================================
# Usage: REST API authentication, WebSocket connections, session management
# CRITICAL: Change JWT_SECRET in production! Generate: openssl rand -hex 32

JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=1d                       # Default token expiry: 1 day

# Session Configuration
SESSION_DURATION=7d                     # JWT access token expiry: 7 days
REFRESH_TOKEN_DURATION=30d              # Refresh token expiry: 30 days
MAX_SESSIONS_PER_USER=5                 # Max concurrent sessions per user

# MQTT Configuration
MQTT_BROKER_URL=mqtt://your_mqtt_broker:1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
MQTT_CLIENT_ID=your_device_id

# Database Configuration
DATABASE_PATH=./data/mash_device.db
SQLITE_TIMEOUT=30

# Sensor Configuration
SENSOR_READ_INTERVAL=60
SENSOR_CALIBRATION_OFFSET_TEMP=0.0
SENSOR_CALIBRATION_OFFSET_HUMIDITY=0.0

# Control Thresholds
TEMP_MIN=25.0
TEMP_MAX=28.0
TEMP_CRITICAL_HIGH=32.0
HUMIDITY_MIN=80.0
HUMIDITY_MAX=90.0
CO2_OPTIMAL_MIN=10000
CO2_OPTIMAL_MAX=15000
CO2_CRITICAL_HIGH=20000

# Sync Configuration
SYNC_INTERVAL=300
BATCH_SYNC_SIZE=100
DATA_RETENTION_DAYS=30
ALERT_COOLDOWN_SECONDS=900

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/mash_device.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Development/Testing
MOCK_MODE=false
DEBUG_MODE=false
