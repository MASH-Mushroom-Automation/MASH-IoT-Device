# Touchscreen UI - Environment Configuration Example
# Copy this file to .env and fill in your values

# ========== Device Configuration ==========
DEVICE_ID=MASH-A1-CAL25-D5A91F
DEVICE_NAME=MASH Chamber #1

# ========== Display Configuration ==========
# Screen size: 'auto' (detect), '3.5' (480x320), or '7' (800x480)
SCREEN_SIZE=auto

# ========== Backend API Configuration ==========
API_BASE_URL=http://127.0.0.1:5000/api
WEBSOCKET_URL=ws://127.0.0.1:5000

# ========== Firebase Configuration ==========
# Enable Firebase cloud sync
FIREBASE_ENABLED=false
FIREBASE_PROJECT_ID=
FIREBASE_DATABASE_URL=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# ========== MQTT Configuration ==========
# Enable MQTT real-time communication
MQTT_ENABLED=false
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=mash_ui_001

# ========== Debug Configuration ==========
# Enable debug mode (shows FPS, touch visualization)
DEBUG=false
